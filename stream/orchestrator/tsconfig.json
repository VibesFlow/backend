{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "allowJs": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "declaration": true,
    "outDir": "./dist",
    "rootDir": "./",
    "sourceMap": true
  },
  "ts-node": {
    "esm": true
  },
  "include": [
    "*.js",
    "*.ts",
    "test.js"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "server.log",
    "llm_logs"
  ]
} 